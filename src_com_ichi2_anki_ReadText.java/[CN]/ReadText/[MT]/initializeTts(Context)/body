{
  mReviewer=context;
  mTts=new TextToSpeech(context,new TextToSpeech.OnInitListener(){
    @Override public void onInit(    int status){
      if (status != TextToSpeech.SUCCESS) {
        int result=mTts.setLanguage(Locale.US);
        if (result == TextToSpeech.LANG_MISSING_DATA || result == TextToSpeech.LANG_NOT_SUPPORTED) {
        }
 else {
          Log.e(AnkiDroidApp.TAG,"TTS initialized and set to US");
        }
      }
 else {
        Log.e(AnkiDroidApp.TAG,"Initialization of TTS failed");
      }
      mTts.setOnUtteranceProgressListener(new UtteranceProgressListener(){
        @Override public void onDone(        String arg0){
          if (mTextQueue.size() > 0) {
            String[] text=mTextQueue.remove(0);
            speak(text[0],text[1]);
          }
        }
        @Override public void onError(        String arg0){
        }
        @Override public void onStart(        String arg0){
        }
      }
);
    }
  }
);
  mTtsParams=new HashMap<String,String>();
  mTtsParams.put(TextToSpeech.Engine.KEY_PARAM_UTTERANCE_ID,"stringId");
}
