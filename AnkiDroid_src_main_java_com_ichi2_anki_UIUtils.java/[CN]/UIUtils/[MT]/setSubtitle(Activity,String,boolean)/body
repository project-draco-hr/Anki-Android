{
  AppCompatActivity actionBarActivity=(AppCompatActivity)activity;
  ActionBar actionBar=actionBarActivity.getSupportActionBar();
  if (actionBar != null) {
    if (inverted) {
      CharacterStyle span=new ForegroundColorSpan(activity.getResources().getColor(Themes.getResourceIdFromAttributeId(R.attr.actionBarTextColor)));
      SpannableStringBuilder ssb=new SpannableStringBuilder(title);
      ssb.setSpan(span,0,ssb.length(),0);
      actionBar.setSubtitle(ssb);
    }
 else {
      actionBar.setSubtitle(title);
    }
  }
}
