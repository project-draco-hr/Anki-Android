{
  try {
    mCol.modSchema();
    DeckTask.launchDeckTask(DeckTask.TASK_TYPE_CHANGE_SORT_FIELD,mChangeFieldHandler,new DeckTask.TaskData(new Object[]{mMod,new Integer(currentPos)}));
  }
 catch (  ConfirmModSchemaException e) {
    ConfirmationDialog c=new ConfirmationDialog(){
      public void confirm(){
        mCol.modSchemaNoCheck();
        DeckTask.launchDeckTask(DeckTask.TASK_TYPE_CHANGE_SORT_FIELD,mChangeFieldHandler,new DeckTask.TaskData(new Object[]{mMod,new Integer(currentPos)}));
        dismissContextMenu();
      }
      public void cancel(){
        dismissContextMenu();
      }
    }
;
    c.setArgs(getResources().getString(R.string.full_sync_confirmation));
    ModelFieldEditor.this.showDialogFragment(c);
  }
}
