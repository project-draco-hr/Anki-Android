{
  DeckStatus[] decks=WidgetStatus.fetch(getBaseContext());
  if (dueDecks == null) {
    dueDecks=new ArrayList<DeckStatus>();
  }
 else {
    dueDecks.clear();
  }
  dueCardsCount=0;
  for (  DeckStatus deck : decks) {
    if (deck.mDueCards > 0) {
      dueCardsCount+=deck.mDueCards;
      dueDecks.add(deck);
    }
  }
}
