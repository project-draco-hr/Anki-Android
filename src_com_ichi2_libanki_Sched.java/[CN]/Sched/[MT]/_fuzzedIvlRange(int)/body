{
  int fuzz;
  if (ivl < 2) {
    return new int[]{1,1};
  }
 else   if (ivl == 2) {
    return new int[]{2,3};
  }
 else   if (ivl < 7) {
    fuzz=(int)(ivl * 0.25);
  }
 else   if (ivl < 30) {
    fuzz=(int)(ivl * 0.15);
  }
 else {
    fuzz=(int)(ivl * 0.05);
  }
  fuzz=Math.max(fuzz,1);
  return new int[]{ivl - fuzz,ivl + fuzz};
}
