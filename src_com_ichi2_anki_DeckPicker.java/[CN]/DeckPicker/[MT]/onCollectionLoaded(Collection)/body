{
  super.onCollectionLoaded(col);
  if (mFragmented) {
    long did=col.getDecks().selected();
    selectDeck(did);
  }
  if (AnkiDroidApp.colIsOpen() && mImportPath != null) {
    if (mHandler == null) {
      mHandler=new DialogHandler(this);
    }
    mHandler.sendEmptyMessage(MSG_SHOW_COLLECTION_IMPORT_DIALOG);
  }
  loadCounts();
}
