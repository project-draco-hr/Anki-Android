{
  DeckTask.launchDeckTask(DeckTask.TASK_TYPE_LOAD_TUTORIAL,new DeckTask.TaskListener(){
    @Override public void onPreExecute(){
      mProgressDialog=StyledProgressDialog.show(DeckPicker.this,"",getResources().getString(R.string.tutorial_load),true);
    }
    @Override public void onPostExecute(    TaskData result){
      if (result.getBoolean()) {
        loadCounts();
        openStudyOptions(AnkiDroidApp.getCol().getDecks().selected());
      }
 else {
        Themes.showThemedToast(DeckPicker.this,getResources().getString(R.string.tutorial_loading_error),false);
      }
      if (mProgressDialog.isShowing()) {
        try {
          mProgressDialog.dismiss();
        }
 catch (        Exception e) {
          Log.e(AnkiDroidApp.TAG,"onPostExecute - Dialog dismiss Exception = " + e.getMessage());
        }
      }
    }
    @Override public void onProgressUpdate(    TaskData... values){
    }
    @Override public void onCancelled(){
    }
  }
,new DeckTask.TaskData(AnkiDroidApp.getCol()));
}
