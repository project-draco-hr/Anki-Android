{
  Cursor cursor=null;
  long scalar;
  try {
    cursor=mDatabase.rawQuery(query,null);
    if (!cursor.moveToNext()) {
      if (throwException) {
        throw new SQLException("No result for query: " + query);
      }
 else {
        return 0;
      }
    }
    scalar=cursor.getLong(0);
  }
  finally {
    if (cursor != null) {
      cursor.close();
    }
  }
  return scalar;
}
