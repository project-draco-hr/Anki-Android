{
  Cursor cursor=null;
  long scalar;
  try {
    cursor=mDatabase.rawQuery(query,null);
    if (!cursor.moveToFirst()) {
      throw new SQLException("No result for query: " + query);
    }
    scalar=cursor.getLong(0);
  }
  finally {
    if (cursor != null) {
      cursor.close();
    }
  }
  return scalar;
}
