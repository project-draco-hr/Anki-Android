{
  int value;
  Cursor cursor=null;
  boolean dbAlreadyOpened=AnkiDatabaseManager.isDatabaseOpen(deckPath);
  try {
    cursor=AnkiDatabaseManager.getDatabase(deckPath).getDatabase().rawQuery("SELECT mod" + " FROM deck" + " LIMIT 1",null);
    if (!cursor.moveToFirst()) {
      value=-1;
    }
 else {
      value=cursor.getInt(0);
    }
  }
  finally {
    if (cursor != null && !cursor.isClosed()) {
      cursor.close();
    }
  }
  if (!dbAlreadyOpened) {
    AnkiDatabaseManager.closeDatabase(deckPath);
  }
  return value;
}
