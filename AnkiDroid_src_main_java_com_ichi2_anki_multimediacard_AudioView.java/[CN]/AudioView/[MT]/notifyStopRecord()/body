{
  mPlayPause.update();
  mStop.update();
  if (mRecord != null) {
    mRecord.update();
  }
  if (mRecorder != null && mStatus == Status.RECORDING) {
    mRecorder.stop();
    mStatus=Status.IDLE;
    if (mOnRecordingFinishEventListener != null) {
      mOnRecordingFinishEventListener.onRecordingFinish(AudioView.this);
    }
  }
}
