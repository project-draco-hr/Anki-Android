{
  String lim;
  if (nids != null) {
    lim=" WHERE id IN " + Utils.ids2str(nids);
  }
 else {
    lim="";
    mTags.clear();
    mChanged=true;
  }
  ArrayList<String> tags=mCol.getDb().queryColumn(String.class,"SELECT DISTINCT FROM notes" + lim,0);
  StringBuilder sb=new StringBuilder();
  for (  String t : tags) {
    sb.append(t).append(" ");
  }
  register(sb.toString().split(" "));
}
