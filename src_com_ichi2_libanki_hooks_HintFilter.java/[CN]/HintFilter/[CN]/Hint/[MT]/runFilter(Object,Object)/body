{
  String txt=(String)arg;
  if (txt.trim().length() == 0) {
    return "";
  }
  Resources res=(Resources)args[1];
  String domid="hint" + txt.hashCode();
  return "<a class=hint href=\"#\" onclick=\"this.style.display='none';document.getElementById('" + domid + "').style.display='block';return false;\">"+ res.getString(R.string.show_hint)+ "</a><div id=\""+ domid+ "\" class=hint style=\"display: none\">"+ txt+ "</div>";
}
