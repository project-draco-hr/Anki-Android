{
  int div=length;
  if (length > 2) {
    div=length - 2;
  }
  float halfDiffX=(points[length - 2] - points[0]) / div;
  if (halfDiffX == 0) {
    halfDiffX=10;
  }
  if (mType != Type.STACKED) {
    halfDiffX/=seriesNr;
  }
  return (float)(halfDiffX / (getCoeficient() * (1 + mRenderer.getBarSpacing())));
}
