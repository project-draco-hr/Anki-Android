{
  if (solid) {
    view.setBackgroundResource(mBackgroundDarkColor);
  }
 else {
    try {
      view.setBackgroundResource(mWallpaper);
    }
 catch (    OutOfMemoryError e) {
      mWallpaper=mBackgroundColor;
      view.setBackgroundResource(mWallpaper);
      Log.e(AnkiDroidApp.TAG,"Themes: setWallpaper: OutOfMemoryError = " + e);
    }
  }
}
