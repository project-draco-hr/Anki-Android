{
  mContext=context;
  if (mCurrentTheme == -1) {
    loadTheme();
  }
switch (mCurrentTheme) {
case THEME_ANDROID_DARK:
    context.setTheme(R.style.Theme_Black);
  break;
case THEME_ANDROID_LIGHT:
context.setTheme(R.style.Theme_Light);
break;
case THEME_BLUE:
context.setTheme(R.style.Theme_Blue);
break;
}
}
