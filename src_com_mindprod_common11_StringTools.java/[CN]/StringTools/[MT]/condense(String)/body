{
  if (s == null) {
    return null;
  }
  s=s.trim();
  if (s.indexOf("  ") < 0) {
    return s;
  }
  int len=s.length();
  StringBuffer b=new StringBuffer(len - 1);
  boolean suppressSpaces=false;
  for (int i=0; i < len; i++) {
    char c=s.charAt(i);
    if (c == ' ') {
      if (suppressSpaces) {
      }
 else {
        b.append(c);
        suppressSpaces=true;
      }
    }
 else {
      b.append(c);
      suppressSpaces=false;
    }
  }
  return b.toString();
}
