{
  boolean negative;
  if (pennies < 0) {
    pennies=-pennies;
    negative=true;
  }
 else {
    negative=false;
  }
  String s=Long.toString(pennies);
  int len=s.length();
switch (len) {
case 1:
    s="0.0" + s;
  break;
case 2:
s="0." + s;
break;
default :
s=s.substring(0,len - 2) + "." + s.substring(len - 2,len);
break;
}
if (negative) {
s="-" + s;
}
return s;
}
