{
  String deckName=mDeckNames[item];
  mDeckPath=mFullDeckPaths.get(deckName);
  Deck deck=AnkiDroidApp.deck();
  if (deck != null && deck.getDeckPath().equals(mDeckPath)) {
    mDeck=deck;
  }
 else {
    mDeck=Deck.openDeck(mDeckPath,false);
    if (mDeck == null) {
      Themes.showThemedToast(CardEditor.this,getResources().getString(R.string.fact_adder_deck_not_loaded),true);
      return;
    }
  }
  setTitle(deckName);
  loadContents();
}
