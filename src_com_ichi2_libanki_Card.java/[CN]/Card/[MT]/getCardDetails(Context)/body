  builder.append(res.getString(R.string.card_details_answer));
  builder.append("</td><td>");
  builder.append(Utils.stripHTML(_getQA(false).get("a")));
  builder.append("</td></tr>");
  builder.append("</table></html></body>");
  return builder.toString();
}
