{
  Log.i(AnkiDroidApp.TAG,"answerCard");
  mReps+=1;
  card.setReps(card.getReps() + 1);
  if (card.getQueue() == 0) {
    card.setQueue(1);
    card.setType(1);
  }
  if (card.getQueue() == 1) {
    _answerLrnCard(card,ease);
  }
 else   if (card.getQueue() == 2) {
    _answerRevCard(card,ease);
  }
 else {
    Log.e(AnkiDroidApp.TAG,"invalid queue");
  }
  card.setMod();
  card.flushSched();
}
