{
  if (keyCode == KeyEvent.KEYCODE_BACK && event.getRepeatCount() == 0) {
    Log.i(AnkiDroidApp.TAG,"StudyOptions - onBackPressed()");
    if (mCurrentContentView == CONTENT_CONGRATS) {
      finishCongrats();
    }
 else {
      closeStudyOptions();
    }
    return true;
  }
  return super.onKeyDown(keyCode,event);
}
