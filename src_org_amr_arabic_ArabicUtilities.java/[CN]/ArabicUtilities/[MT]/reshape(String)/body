{
  if (allText != null) {
    StringBuilder result=new StringBuilder();
    String[] sentences=allText.split("\n");
    for (int i=0; i < sentences.length; i++) {
      result.append(reshapeSentence(sentences[i]));
      result.append("\n");
    }
    return result.toString();
  }
 else {
    return null;
  }
}
