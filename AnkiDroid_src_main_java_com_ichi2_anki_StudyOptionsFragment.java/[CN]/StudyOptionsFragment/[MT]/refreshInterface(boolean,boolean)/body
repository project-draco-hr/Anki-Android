{
  if (!colOpen()) {
    Timber.e("StudyOptionsFragment.refreshInterface failed due to Collection being closed");
    return;
  }
  Timber.d("Refreshing StudyOptionsFragment");
  DeckTask.launchDeckTask(DeckTask.TASK_TYPE_UPDATE_VALUES_FROM_DECK,getDeckTaskListener(resetDecklist),new DeckTask.TaskData(getCol(),new Object[]{resetSched,mChartView != null}));
}
