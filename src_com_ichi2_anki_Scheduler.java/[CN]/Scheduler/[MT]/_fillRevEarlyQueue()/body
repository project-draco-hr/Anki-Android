{
  if ((mRevCount != 0) && mRevQueue.isEmpty()) {
    Cursor cur=null;
    try {
      cur=mDb.getDatabase().rawQuery(cardLimit("revActive","revInactive",String.format(Utils.ENGLISH_LOCALE,"SELECT id, factId FROM cards c WHERE queue = 1 AND due > %f " + "ORDER BY due LIMIT %d",mDayCutoff,mQueueLimit)),null);
      while (cur.moveToNext()) {
        QueueItem qi=new QueueItem(cur.getLong(0),cur.getLong(1));
        mRevQueue.add(0,qi);
      }
    }
  finally {
      if (cur != null && !cur.isClosed()) {
        cur.close();
      }
    }
  }
}
