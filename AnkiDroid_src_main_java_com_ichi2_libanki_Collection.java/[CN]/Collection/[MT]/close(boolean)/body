{
  if (mDb != null) {
    try {
      SQLiteDatabase db=mDb.getDatabase();
      if (save) {
        db.beginTransaction();
        try {
          save();
          db.setTransactionSuccessful();
        }
  finally {
          db.endTransaction();
        }
      }
 else {
        if (db.inTransaction()) {
          db.endTransaction();
        }
      }
    }
 catch (    RuntimeException e) {
      AnkiDroidApp.sendExceptionReport(e,"closeDB");
    }
    if (!mServer) {
      mDb.getDatabase().rawQuery("pragma journal_mode = delete",null);
    }
    mDb.close();
    mDb=null;
    mMedia.close();
    _closeLog();
    Timber.i("Collection closed");
  }
}
