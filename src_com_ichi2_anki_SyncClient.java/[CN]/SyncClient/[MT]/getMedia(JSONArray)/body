{
  JSONArray media=new JSONArray();
  Cursor cursor=AnkiDatabaseManager.getDatabase(mDeck.getDeckPath()).getDatabase().rawQuery("SELECT id, filename, size, created, originalPath, description FROM media WHERE id IN " + Utils.ids2str(ids),null);
  while (cursor.moveToNext()) {
    try {
      JSONArray m=new JSONArray();
      m.put(cursor.getLong(0));
      m.put(cursor.getString(1));
      m.put(cursor.getInt(2));
      m.put(cursor.getDouble(3));
      m.put(cursor.getString(4));
      m.put(cursor.getString(5));
      media.put(m);
    }
 catch (    JSONException e) {
      Log.i(AnkiDroidApp.TAG,"JSONException = " + e.getMessage());
    }
  }
  cursor.close();
  return media;
}
