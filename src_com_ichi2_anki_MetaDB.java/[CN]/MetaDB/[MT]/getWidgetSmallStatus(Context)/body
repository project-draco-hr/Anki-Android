{
  openDBIfClosed(context);
  Cursor cursor=null;
  int due=0;
  int progress=0;
  int eta=0;
  boolean noDeck=true;
  try {
    cursor=mMetaDb.query("widgetStatus",new String[]{"depth","newCards","lrnCards","dueCards","progress","eta"},null,null,null,null,null);
    while (cursor.moveToNext()) {
      noDeck=false;
      if (cursor.getInt(0) == 1) {
        due+=cursor.getInt(1) + cursor.getInt(2) + cursor.getInt(3);
        progress=cursor.getInt(4);
        eta=cursor.getInt(5);
      }
    }
  }
 catch (  SQLiteException e) {
    Log.e(AnkiDroidApp.TAG,"Error while querying widgetStatus",e);
  }
 finally {
    if (cursor != null && !cursor.isClosed()) {
      cursor.close();
    }
  }
  return new int[]{noDeck ? -1 : due,progress,eta};
}
