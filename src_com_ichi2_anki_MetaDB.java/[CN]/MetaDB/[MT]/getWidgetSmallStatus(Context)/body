{
  openDBIfClosed(context);
  Cursor cursor=null;
  int due=0;
  int eta=0;
  int time=0;
  boolean noDeck=true;
  try {
    cursor=mMetaDb.query("widgetStatus",new String[]{"dueCards","failedCards","newCards","time","eta"},null,null,null,null,null);
    while (cursor.moveToNext()) {
      noDeck=false;
      int d=cursor.getInt(0) + cursor.getInt(1) + cursor.getInt(2);
      due+=d;
      time+=cursor.getInt(3);
      eta+=cursor.getInt(4);
    }
  }
 catch (  SQLiteException e) {
    Log.e(AnkiDroidApp.TAG,"Error while querying widgetStatus",e);
  }
 finally {
    if (cursor != null && !cursor.isClosed()) {
      cursor.close();
    }
  }
  return new int[]{noDeck ? -1 : due,time,eta};
}
