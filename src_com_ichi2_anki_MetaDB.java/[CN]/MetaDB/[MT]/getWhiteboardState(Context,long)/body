{
  openDBIfClosed(context);
  Cursor cur=null;
  try {
    cur=mMetaDb.rawQuery("SELECT state FROM whiteboardState" + " WHERE did = " + did,null);
    if (cur.moveToNext()) {
      return cur.getInt(0) > 0;
    }
 else {
      return false;
    }
  }
 catch (  Exception e) {
    Log.e("Error","Error retrieving whiteboard state from MetaDB ",e);
    return false;
  }
 finally {
    if (cur != null && !cur.isClosed()) {
      cur.close();
    }
  }
}
