{
  double now=Utils.now();
  ContentValues updateValues=new ContentValues();
  updateValues.put("modified",now);
  updateValues.put("tags",mTags);
  updateValues.put("spaceUntil",mSpaceUntil);
  AnkiDatabaseManager.getDatabase(mDeck.getDeckPath()).getDatabase().update("facts",updateValues,"id = ?",new String[]{"" + mId});
  for (  Field f : mFields) {
    updateValues=new ContentValues();
    updateValues.put("value",f.mValue);
    AnkiDatabaseManager.getDatabase(mDeck.getDeckPath()).getDatabase().update("fields",updateValues,"id = ?",new String[]{"" + f.mFieldId});
  }
}
