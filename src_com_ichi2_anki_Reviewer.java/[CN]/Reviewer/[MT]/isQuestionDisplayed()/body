{
switch (mPrefHideQuestionInAnswer) {
case HQIA_DO_HIDE:
    return false;
case HQIA_DO_SHOW:
  return true;
case HQIA_CARD_MODEL:
try {
  return !mCurrentCard.getTemplate().getString("hideQ").equals("true");
}
 catch (JSONException e) {
  throw new RuntimeException(e);
}
default :
return true;
}
}
