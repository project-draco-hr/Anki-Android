{
switch (mPrefHideQuestionInAnswer) {
case HQIA_DO_HIDE:
    return false;
case HQIA_DO_SHOW:
  return true;
case HQIA_CARD_MODEL:
return (Model.getModel(DeckManager.getMainDeck(),mCurrentCard.getCardModelId(),false).getCardModel(mCurrentCard.getCardModelId()).isQuestionInAnswer());
default :
return true;
}
}
