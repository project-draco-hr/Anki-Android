{
  StringBuilder builder=new StringBuilder();
  for (  String fontPath : mCustomFontFiles) {
    String fontFace=String.format("@font-face {font-family: \"%s\"; src: url(\"file://%s\");}",Utils.removeExtension((new File(fontPath)).getName()),fontPath);
    Log.d(AnkiDroidApp.TAG,"adding to style: " + fontFace);
    builder.append(fontFace);
    builder.append('\n');
  }
  return builder.toString();
}
