{
  mIsSelecting=false;
  Deck deck=AnkiDroidApp.deck();
switch (ease) {
case EASE_FAILED:
    mChosenAnswer.setText(mEase1.getText());
  int[] counts=deck.getSched().counts();
if (counts[0] + counts[1] + counts[2] == 1) {
  mIsLastCard=true;
}
break;
case EASE_HARD:
mChosenAnswer.setText(mEase2.getText());
break;
case EASE_MID:
mChosenAnswer.setText(mEase3.getText());
break;
case EASE_EASY:
mChosenAnswer.setText(mEase4.getText());
break;
}
mTimerHandler.postDelayed(removeChosenAnswerText,mShowChosenAnswerLength);
Sound.stopSounds();
mCurrentEase=ease;
mSessionCurrReps++;
DeckTask.launchDeckTask(DeckTask.TASK_TYPE_ANSWER_CARD,mAnswerCardHandler,new DeckTask.TaskData(mCurrentEase,deck,mCurrentCard));
}
