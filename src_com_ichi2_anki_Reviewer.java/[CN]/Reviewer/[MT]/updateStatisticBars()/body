{
  if (mStatisticBarsMax == 0) {
    View view=findViewById(R.id.progress_bars_back1);
    mStatisticBarsMax=view.getWidth();
    mStatisticBarsHeight=view.getHeight();
  }
  float[] progress=mSched.progressToday(null,mCurrentCard,false);
  Utils.updateProgressBars(mSessionProgressBar,(int)(mStatisticBarsMax * progress[0]),mStatisticBarsHeight);
  Utils.updateProgressBars(mSessionProgressTotalBar,(int)(mStatisticBarsMax * progress[1]),mStatisticBarsHeight);
}
