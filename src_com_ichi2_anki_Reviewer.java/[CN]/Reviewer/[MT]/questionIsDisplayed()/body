{
switch (mPrefHideQuestionInAnswer) {
case HQIA_DO_HIDE:
    return false;
case HQIA_DO_SHOW:
  return true;
case HQIA_CARD_MODEL:
return (Model.getModel(AnkiDroidApp.deck(),mCurrentCard.getCardModelId(),false).getCardModel(mCurrentCard.getCardModelId()).getQuestionInAnswer() == 0);
default :
return true;
}
}
