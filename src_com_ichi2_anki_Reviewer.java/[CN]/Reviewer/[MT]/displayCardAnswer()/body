{
  Log.i(TAG,"displayCardAnswer");
  mCardTimer.stop();
  mAnswerField.setVisibility(View.GONE);
  if (prefWriteAnswers) {
    if (mCurrentCard != null) {
      String userAnswer=mAnswerField.getText().toString();
      String correctAnswer=(String)mCurrentCard.answer.subSequence(mCurrentCard.answer.indexOf(">") + 1,mCurrentCard.answer.lastIndexOf("<"));
      DiffEngine diff=new DiffEngine();
      updateCard(diff.diff_prettyHtml(diff.diff_main(userAnswer,correctAnswer)) + "<br/>" + mCurrentCard.answer);
    }
 else {
      updateCard("");
    }
  }
 else {
    updateCard(mCurrentCard.answer);
  }
  showEaseButtons();
}
