{
  try {
    if ((oldInstance != null) && (oldInstance.getStatus() != AsyncTask.Status.FINISHED))     oldInstance.get();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
switch (type) {
case TASK_TYPE_LOAD_DECK:
    return doInBackgroundLoadDeck(params);
case TASK_TYPE_ANSWER_CARD:
  return doInBackgroundAnswerCard(params);
default :
return null;
}
}
