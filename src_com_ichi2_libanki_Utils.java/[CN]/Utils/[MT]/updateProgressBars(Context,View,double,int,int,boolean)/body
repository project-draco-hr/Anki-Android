{
  if (view == null) {
    return;
  }
  if (vertical) {
    LinearLayout.LayoutParams lparam=new LinearLayout.LayoutParams(0,0);
    lparam.height=(int)(maxX * progress);
    lparam.width=y;
    view.setLayoutParams(lparam);
  }
 else {
    LinearLayout.LayoutParams lparam=new LinearLayout.LayoutParams(0,0);
    lparam.height=y;
    lparam.width=(int)(maxX * progress);
    view.setLayoutParams(lparam);
  }
}
