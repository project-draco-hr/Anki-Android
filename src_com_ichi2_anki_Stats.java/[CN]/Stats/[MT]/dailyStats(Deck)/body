{
  Log.i(TAG,"Getting daily stats...");
  int type=STATS_DAY;
  Date today=genToday(deck);
  Stats stats=null;
  Cursor cursor=null;
  try {
    Log.i(TAG,"Trying to get stats for " + today.toString());
    cursor=AnkiDatabaseManager.getDatabase(deck.deckPath).database.rawQuery("SELECT id " + "FROM stats " + "WHERE type = " + String.valueOf(type) + " and day = \""+ today.toString()+ "\"",null);
    if (cursor.moveToFirst()) {
      stats=new Stats(deck);
      stats.fromDB(cursor.getLong(0));
      return stats;
    }
  }
  finally {
    if (cursor != null) {
      cursor.close();
    }
  }
  stats=new Stats(deck);
  stats.create(type,today);
  stats.type=type;
  return stats;
}
