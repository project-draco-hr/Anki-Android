{
  JSONObject m=newModel(name);
  JSONObject fm=newField("Front");
  addField(m,fm);
  fm=newField("Back");
  addField(m,fm);
  JSONObject t=newTemplate("Forward");
  try {
    t.put("qfmt","{{Front}}");
    t.put("afmt",t.getString("qfmt") + "\n\n<hr id=answer>\n\n{{Back}}");
  }
 catch (  JSONException e) {
    throw new RuntimeException(e);
  }
  addTemplate(m,t);
  add(m,setCurrent);
  return m;
}
