{
  Timber.d("onResume()");
  super.onResume();
  selectNavigationItem(R.id.nav_decks);
  if (mSyncOnResume) {
    sync();
    mSyncOnResume=false;
  }
 else   if (colIsOpen()) {
    updateDeckList();
    hideProgressBar();
  }
  setTitle(getResources().getString(R.string.app_name));
  sIsWholeCollection=!mFragmented;
}
