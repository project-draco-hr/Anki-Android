{
  Log.i(TAG,"onResume() - deckFilename = " + deckFilename + ", deckSelected = "+ deckSelected);
  super.onResume();
  if (isSdCardMounted()) {
    if (!deckSelected) {
      Log.i(TAG,"onResume() - No deck selected before");
      displayProgressDialogAndLoadDeck();
    }
  }
 else {
    deckSelected=false;
    displaySdError();
  }
  Log.i(TAG,"onResume() - Ending");
}
