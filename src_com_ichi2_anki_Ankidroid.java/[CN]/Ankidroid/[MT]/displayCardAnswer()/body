{
  Log.i(TAG,"displayCardAnswer");
  mTimer.stop();
  mWhiteboard.lock();
  mSelectRemembered.setVisibility(View.VISIBLE);
  mSelectNotRemembered.setVisibility(View.VISIBLE);
  mAnswerField.setVisibility(View.GONE);
  mSelectRemembered.requestFocus();
  if (writeAnswers) {
    if (currentCard != null) {
      String userAnswer=mAnswerField.getText().toString();
      String correctAnswer=(String)currentCard.answer.subSequence(currentCard.answer.indexOf(">") + 1,currentCard.answer.lastIndexOf("<"));
      DiffEngine diff=new DiffEngine();
      updateCard(diff.diff_prettyHtml(diff.diff_main(userAnswer,correctAnswer)) + "<br/>" + currentCard.answer);
    }
 else {
      updateCard("");
    }
  }
 else {
    updateCard(currentCard.answer);
  }
}
