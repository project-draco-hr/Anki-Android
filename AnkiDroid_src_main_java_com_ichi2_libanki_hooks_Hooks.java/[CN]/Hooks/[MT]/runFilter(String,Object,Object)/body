{
  List<Hook> _hook=hooks.get(hook);
  String funcName="";
  if (_hook != null) {
    try {
      for (      Hook func : _hook) {
        funcName=func.getClass().getCanonicalName();
        arg=func.runFilter(arg,args);
      }
    }
 catch (    Exception e) {
      Log.e(AnkiDroidApp.TAG,"Exception while running hook " + hook + ":"+ funcName,e);
      return "Error in filter " + hook + ":"+ funcName;
    }
  }
  return arg;
}
