{
  mShowWhiteboard=state;
  if (state) {
    mWhiteboard.setVisibility(View.VISIBLE);
    if (mWhiteboardListener != null) {
      mWhiteboardListener.onShowWhiteboard();
    }
  }
 else {
    mWhiteboard.setVisibility(View.GONE);
    if (mWhiteboardListener != null) {
      mWhiteboardListener.onHideWhiteboard();
    }
  }
}
