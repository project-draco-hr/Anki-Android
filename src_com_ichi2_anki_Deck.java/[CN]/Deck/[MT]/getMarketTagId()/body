{
  if (markedTagId == 0) {
    markedTagId=-1;
    Cursor cur=null;
    try {
      cur=getDB().getDatabase().rawQuery("SELECT id FROM tags WHERE tag = \"" + TAG_MARKED + "\"",null);
      while (cur.moveToNext()) {
        markedTagId=cur.getInt(0);
      }
    }
  finally {
      if (cur != null && !cur.isClosed()) {
        cur.close();
      }
    }
  }
  return markedTagId;
}
