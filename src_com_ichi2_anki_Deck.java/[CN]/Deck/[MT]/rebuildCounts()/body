{
  try {
    cardCount=(int)getDB().queryScalar("SELECT count(*) from cards");
    factCount=(int)getDB().queryScalar("SELECT count(*) from facts");
  }
 catch (  SQLException e) {
    Log.e(TAG,"rebuildCounts: Error while getting global counts: " + e.toString());
    cardCount=0;
    factCount=0;
  }
  rebuildFailedCount();
  rebuildRevCount();
  rebuildNewCount();
}
