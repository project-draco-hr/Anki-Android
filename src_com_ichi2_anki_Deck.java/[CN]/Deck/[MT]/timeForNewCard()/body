{
  if (mNewCardSpacing == NEW_CARDS_LAST) {
    return false;
  }
  if (mNewCardSpacing == NEW_CARDS_FIRST) {
    return true;
  }
  try {
    AnkiDatabaseManager.getDatabase(mDeckPath).queryScalar("SELECT 1 FROM cards WHERE isDue = 1 and type = " + Card.TYPE_REV + " and priority = "+ Card.PRIORITY_HIGH+ " LIMIT 1");
  }
 catch (  Exception e) {
    if (mNewCardModulus == 0) {
      return false;
    }
 else {
      return (mDailyStats.getReps() % mNewCardModulus) == 0;
    }
  }
  return false;
}
