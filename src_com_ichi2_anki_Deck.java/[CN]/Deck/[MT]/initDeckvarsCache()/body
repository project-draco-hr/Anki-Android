{
  mDeckVars.clear();
  Cursor cur=null;
  try {
    cur=getDB().getDatabase().rawQuery("SELECT key, value FROM deckVars",null);
    while (cur.moveToNext()) {
      mDeckVars.put(cur.getString(0),cur.getString(1));
    }
  }
  finally {
    if (cur != null && !cur.isClosed()) {
      cur.close();
    }
  }
}
