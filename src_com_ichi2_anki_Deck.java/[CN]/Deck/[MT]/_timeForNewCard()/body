{
  if (mNewCountToday == 0) {
    return false;
  }
  if (mNewCardSpacing == NEW_CARDS_LAST) {
    return false;
  }
  if (mNewCardSpacing == NEW_CARDS_FIRST) {
    return true;
  }
  try {
    if (!revQueue.isEmpty()) {
      if (getDB().queryScalar("SELECT 1 FROM cards WHERE id = " + revQueue.getLast().getCardID() + " AND priority = 4") == 1) {
        return false;
      }
    }
  }
 catch (  Exception e) {
  }
  if (mNewCardModulus != 0) {
    return (mDailyStats.getReps() % mNewCardModulus == 0);
  }
 else {
    return false;
  }
}
