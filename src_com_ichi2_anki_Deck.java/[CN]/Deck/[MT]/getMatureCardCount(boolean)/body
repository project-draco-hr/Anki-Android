{
  String sql=String.format(Utils.ENGLISH_LOCALE,"SELECT count(*) from cards c WHERE (type = 1 OR TYPE = 0) AND interval >= %d",Card.MATURE_THRESHOLD);
  if (restrictToActive) {
    return (int)getDB().queryScalar(cardLimit("revActive","revInactive",sql));
  }
 else {
    return (int)getDB().queryScalar(sql);
  }
}
