{
  double dayStart=mDueCutoff + (86400 * (day - 1));
  String sql=String.format(Utils.ENGLISH_LOCALE,"SELECT count(*) FROM cards c WHERE queue = 1 AND due BETWEEN %f AND %f AND interval >= %d",dayStart,dayStart + 86400,Card.MATURE_THRESHOLD);
  return (int)getDB().queryScalar(cardLimit("revActive","revInactive",sql));
}
