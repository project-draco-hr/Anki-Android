{
  if ((mRevCount != 0) && mRevQueue.isEmpty()) {
    Cursor cur=null;
    try {
      cur=getDB().getDatabase().rawQuery(cardLimit("revActive","revInactive",String.format(Utils.ENGLISH_LOCALE,"SELECT id, factId, combinedDue FROM cards c WHERE type = 1 AND combinedDue > %f " + "ORDER BY combinedDue LIMIT %d",mDueCutoff,mQueueLimit)),null);
      while (cur.moveToNext()) {
        QueueItem qi=new QueueItem(cur.getLong(0),cur.getLong(1));
        mRevQueue.add(0,qi);
      }
    }
  finally {
      if (cur != null && !cur.isClosed()) {
        cur.close();
      }
    }
  }
}
