{
  if ((mRevCount != 0) && mRevQueue.isEmpty()) {
    String sql="SELECT id, factId, combinedDue FROM cards WHERE type = 1 AND combinedDue > " + dueCutoff + " ORDER BY combinedDue LIMIT "+ mQueueLimit;
    Cursor cur=getDB().getDatabase().rawQuery(sql,null);
    while (cur.moveToNext()) {
      QueueItem qi=new QueueItem(cur.getLong(0),cur.getLong(1));
      mRevQueue.add(0,qi);
    }
  }
}
