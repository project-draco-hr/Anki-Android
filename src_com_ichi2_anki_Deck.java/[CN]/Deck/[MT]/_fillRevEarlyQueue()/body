{
  if ((mRevCount != 0) && mRevQueue.isEmpty()) {
    Cursor cur=null;
    try {
      String sql="SELECT id, factId, combinedDue FROM cards WHERE type = 1 AND combinedDue > " + mDueCutoff + " ORDER BY combinedDue LIMIT "+ mQueueLimit;
      cur=getDB().getDatabase().rawQuery(sql,null);
      while (cur.moveToNext()) {
        QueueItem qi=new QueueItem(cur.getLong(0),cur.getLong(1));
        mRevQueue.add(0,qi);
      }
    }
  finally {
      if (cur != null) {
        cur.close();
      }
    }
  }
}
