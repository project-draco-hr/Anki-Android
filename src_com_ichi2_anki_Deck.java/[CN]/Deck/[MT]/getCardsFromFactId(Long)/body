{
  Cursor cursor=null;
  ArrayList<Long> cardIds=new ArrayList<Long>();
  try {
    cursor=getDB().getDatabase().rawQuery("SELECT id FROM cards WHERE factid = " + factId,null);
    while (cursor.moveToNext()) {
      cardIds.add(cursor.getLong(0));
    }
  }
  finally {
    if (cursor != null && !cursor.isClosed()) {
      cursor.close();
    }
  }
  return cardIds;
}
