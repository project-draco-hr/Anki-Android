{
  double _new=Utils.now() + mNewSpacing;
  getDB().getDatabase().execSQL(String.format(Utils.ENGLISH_LOCALE,"UPDATE cards SET combinedDue = (CASE WHEN type = 1 THEN " + "combinedDue + 86400 * (CASE WHEN interval*%f < 1 THEN 0 ELSE interval*%f END) " + "WHEN type = 2 THEN %f ELSE combinedDue END), modified = %f, isDue = 0 WHERE id != %d AND factId = %d "+ "AND combinedDue < %f AND type BETWEEN 1 AND 2",mRevSpacing,mRevSpacing,_new,Utils.now(),card.getId(),card.getFactId(),mDueCutoff));
  mSpacedFacts.put(card.getFactId(),_new);
}
