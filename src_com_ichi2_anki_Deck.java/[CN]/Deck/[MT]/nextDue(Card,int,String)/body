{
  double due;
  if (ease == Card.EASE_FAILED) {
    if (oldState.equals(Card.STATE_MATURE)) {
      long d=0;
      if (mDelay1 != 600) {
        d=mDelay1;
      }
      due=d * 86400.0;
    }
 else {
      due=0.0;
    }
  }
 else {
    due=card.getInterval() * 86400.0;
  }
  return (due + Utils.now());
}
