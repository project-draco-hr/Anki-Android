{
  double due;
  if (ease == Card.EASE_FAILED) {
    if (!mScheduler.equals("cram") && oldState.equals(Card.STATE_MATURE) && mDelay1 != 0 && mDelay1 != 600) {
      return mFailedCutoff + (mDelay1 - 1) * 86400;
    }
 else {
      due=0.0;
    }
  }
 else {
    due=card.getInterval() * 86400.0;
  }
  return (due + Utils.now());
}
