{
  card.lastFactor=card.factor;
  if (card.reps == 0)   card.factor=averageFactor;
  if (cardIsBeingLearnt(card) && (ease == 0 || ease == 1 || ease == 2)) {
    if (card.successive != 0 && ease != 2)     card.factor-=0.20;
  }
 else   if (ease == 0 || ease == 1)   card.factor-=0.20;
 else   if (ease == 2)   card.factor-=0.15;
 else   if (ease == 4)   card.factor+=0.10;
  card.factor=Math.max(1.3,card.factor);
}
