{
  int no=card.noCount;
  int fmax=0;
  try {
    fmax=getInt("leechFails");
  }
 catch (  SQLException e) {
    return false;
  }
  Log.i(TAG,"leech handling: " + card.successive + " successive fails and "+ no+ " total fails, threshold at "+ fmax);
  if ((card.successive == 0) && (no >= fmax) && ((fmax - no) % Math.max(fmax / 2,1) == 0)) {
    return true;
  }
 else {
    return false;
  }
}
