{
  if (mDeckVars.containsKey(key)) {
    try {
      return Integer.parseInt(mDeckVars.get(key));
    }
 catch (    NumberFormatException e) {
      Log.w(AnkiDroidApp.TAG,"NumberFormatException: Converting deckvar to int failed, key: \"" + key + "\", value: \""+ mDeckVars.get(key)+ "\"");
      return 0;
    }
  }
 else {
    return 0;
  }
}
