  getDB().database.execSQL("UPDATE cards SET " + "type = (CASE " + "WHEN successive THEN 1 WHEN reps THEN 0 ELSE 2 END), "+ "relativeDelay = (CASE "+ "WHEN successive THEN 1 WHEN reps THEN 0 ELSE 2 END) "+ "WHERE type >= 0");
