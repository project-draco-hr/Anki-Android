{
  double dayStart=mDueCutoff + (86400 * (day - 1));
  String sql=String.format(Utils.ENGLISH_LOCALE,"SELECT count(*) FROM cards c WHERE queue = 1 AND due BETWEEN %f AND %f AND PRIORITY > -1",dayStart,dayStart + 86400);
  return (int)getDB().queryScalar(cardLimit("revActive","revInactive",sql));
}
