{
  if (yyyy == 0) {
    return (mm == 0) && (dd == 0);
  }
  if ((yyyy < MIN_YEAR) || (yyyy > MAX_YEAR) || (mm < 1)|| (mm > 12)|| (dd < 1)|| (dd > 31)) {
    return false;
  }
  if (yyyy == OJC_lastYYYY && mm == OJC_lastMM && OJC_lastDD < dd && dd < GC_firstDD) {
    return false;
  }
  return dd <= daysInMonth(mm,yyyy);
}
