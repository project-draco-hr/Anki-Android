{
  Log.i(TAG,"displayCardAnswer");
  mCardTimer.stop();
  mWhiteboard.lock();
  mEase0.setVisibility(View.VISIBLE);
  mEase1.setVisibility(View.VISIBLE);
  mEase2.setVisibility(View.VISIBLE);
  mEase3.setVisibility(View.VISIBLE);
  mAnswerField.setVisibility(View.GONE);
  mEase2.requestFocus();
  String displayString="";
  if (writeAnswers) {
    if (currentCard != null) {
      String userAnswer=mAnswerField.getText().toString();
      String correctAnswer=(String)currentCard.answer.subSequence(currentCard.answer.indexOf(">") + 1,currentCard.answer.lastIndexOf("<"));
      DiffEngine diff=new DiffEngine();
      displayString=enrichWithQASpan(diff.diff_prettyHtml(diff.diff_main(userAnswer,correctAnswer)) + "<br/>" + currentCard.answer,true);
    }
 else {
      displayString="";
    }
  }
 else {
    displayString=enrichWithQASpan(currentCard.answer,true);
  }
  if (calculateShowQuestion()) {
    StringBuffer sb=new StringBuffer();
    sb.append(enrichWithQASpan(currentCard.question,false));
    sb.append("<hr/>");
    sb.append(displayString);
    displayString=sb.toString();
    mFlipCard.setVisibility(View.GONE);
  }
  updateCard(displayString);
}
