{
  if (!mLocked) {
    float x=event.getX();
    float y=event.getY();
switch (event.getAction()) {
case MotionEvent.ACTION_DOWN:
      touch_start(x,y);
    invalidate();
  break;
case MotionEvent.ACTION_MOVE:
touch_move(x,y);
invalidate();
break;
case MotionEvent.ACTION_UP:
touch_up();
invalidate();
break;
}
}
return true;
}
