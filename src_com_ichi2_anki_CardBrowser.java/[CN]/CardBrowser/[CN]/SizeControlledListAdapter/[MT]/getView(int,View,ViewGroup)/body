{
  View view=super.getView(position,convertView,parent);
  if (view instanceof ViewGroup) {
    ViewGroup group=((ViewGroup)view);
    View child;
    for (int i=0; i < group.getChildCount(); i++) {
      child=group.getChildAt(i);
      if (child instanceof TextView) {
        float currentSize=((TextView)child).getTextSize();
        if (originalTextSize < 0) {
          originalTextSize=((TextView)child).getTextSize();
        }
        if ((fontSizeScalePcent < 99 || fontSizeScalePcent > 101) && (Math.abs(originalTextSize - currentSize) < 0.1)) {
          ((TextView)child).setTextSize(TypedValue.COMPLEX_UNIT_SP,originalTextSize * (fontSizeScalePcent / 100.0f));
        }
      }
    }
  }
  return view;
}
