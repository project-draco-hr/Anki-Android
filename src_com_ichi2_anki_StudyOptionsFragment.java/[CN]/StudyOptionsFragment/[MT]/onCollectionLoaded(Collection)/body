{
  mCollection=col;
  initAllContentViews();
  if (noDeckCounts()) {
    prepareCongratsView();
  }
 else {
    getCol().clearUndo();
  }
  mCramInitialConfig=getArguments().getBundle("cramInitialConfig");
  resetAndUpdateValuesFromDeck();
  setHasOptionsMenu(true);
  showCongratsIfNeeded();
  dismissCollectionLoadingDialog();
}
