{
  if (!colOpen()) {
    Log.e(AnkiDroidApp.TAG,"StudyOptionsFragment.refreshInterface failed due to Collection being closed");
    return;
  }
  if (mTextDeckName == null) {
    initAllContentViews();
    resetAndRefreshInterface(updateDeckList);
    return;
  }
  DeckTask.launchDeckTask(DeckTask.TASK_TYPE_UPDATE_VALUES_FROM_DECK,getDeckTaskListener(updateDeckList),new DeckTask.TaskData(getCol(),new Object[]{reset,mSmallChart != null}));
}
