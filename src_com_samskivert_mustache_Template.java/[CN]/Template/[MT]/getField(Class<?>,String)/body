{
  Field f;
  try {
    f=clazz.getDeclaredField(name);
    if (!f.isAccessible()) {
      f.setAccessible(true);
    }
    return f;
  }
 catch (  Exception e) {
  }
  Class<?> sclass=clazz.getSuperclass();
  if (sclass != Object.class && sclass != null) {
    return getField(clazz.getSuperclass(),name);
  }
  return null;
}
