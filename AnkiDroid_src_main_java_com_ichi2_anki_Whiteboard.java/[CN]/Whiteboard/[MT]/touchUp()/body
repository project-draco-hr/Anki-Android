{
  PathMeasure pm=new PathMeasure(mPath,false);
  mPath.lineTo(mX,mY);
  if (pm.getLength() > 0) {
    mCanvas.drawPath(mPath,mPaint);
    mUndo.add(mPath);
  }
 else {
    mCanvas.drawPoint(mX,mY,mPaint);
    mUndo.add(mX,mY);
  }
  mPath.reset();
  if (mUndo.size() == 1 && mActivity.get() != null) {
    mActivity.get().supportInvalidateOptionsMenu();
  }
}
