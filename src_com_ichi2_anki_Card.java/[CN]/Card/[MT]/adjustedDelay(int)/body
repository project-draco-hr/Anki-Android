{
  double now=Utils.now();
  double dueCutoff=mDeck.getDueCutoff();
  if (isNew()) {
    return 0;
  }
  if (mReps != 0 && mSuccessive == 0) {
    return 0;
  }
  if (mCombinedDue <= dueCutoff) {
    return (dueCutoff - mDue) / 86400.0;
  }
 else {
    return (dueCutoff - mCombinedDue) / 86400.0;
  }
}
