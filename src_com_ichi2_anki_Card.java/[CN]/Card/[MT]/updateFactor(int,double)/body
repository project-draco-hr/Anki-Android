{
  if (isNew()) {
    mFactor=averageFactor;
  }
  if (isRev() && !isBeingLearnt()) {
    if (ease == EASE_FAILED) {
      mFactor-=0.20;
    }
 else     if (ease == EASE_HARD) {
      mFactor-=0.15;
    }
  }
  if (ease == EASE_EASY) {
    mFactor+=0.10;
  }
  mFactor=Math.max(Deck.FACTOR_FOUR,mFactor);
}
